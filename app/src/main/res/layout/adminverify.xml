<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@color/white"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/compaintimage"

            android:layout_marginRight="10dp"
            android:layout_marginLeft="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/admincompstatus"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"

                android:text="Pending"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/admincompdate"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"

                android:text="Current Date"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/admincomptype"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"

                android:text="Type of complaint"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/admincompid"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"

                android:text="ID"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/admincompdesc"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"

                android:text="Description"
                android:textColor="@color/black"

                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/admincompusername"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"

                android:text="Username"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Accept"
            android:fontFamily="@font/c"
            android:textSize="20dp"
            android:background="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:id="@+id/admincompaccept"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Reject"
            android:fontFamily="@font/c"
            android:background="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:id="@+id/admincompreject"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:fontFamily="@font/c"
            android:textSize="20dp"
            android:background="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:id="@+id/admincompdelete"/>

    </LinearLayout>

</LinearLayout>