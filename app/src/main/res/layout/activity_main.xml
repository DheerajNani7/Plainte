<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".MainActivity">
    <!--    android:background="@drawable/queensland"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:background="@color/white"
        android:layout_gravity="center"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="User Login"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/button"
            android:fontFamily="@font/aurella"
            android:textStyle="bold"
            android:textSize="100dp"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/email"
            android:drawableEnd="@drawable/ic_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Username"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textColorHint="@color/darkgray"
            android:inputType="textEmailAddress"
            android:importantForAutofill="no"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/password"
            android:textSize="20dp"
            android:textColorHint="@color/darkgray"
            android:drawableEnd="@drawable/ic_lock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:importantForAutofill="no"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/lgnButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="Login"
            android:fontFamily="@font/c"
            android:textSize="25dp"
            android:onClick="login"
            />

        <Button
            android:id="@+id/registerQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No account yet?  Register"
            android:textColor="@color/white"
            android:background="@color/black"
            android:onClick="signup"
            android:fontFamily="@font/c"
            android:textSize="18dp"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            />

        <Button
            android:id="@+id/adminLoginQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/black"
            android:text="Login as an administrator"
            android:textAlignment="center"
            android:onClick="adminlogin"
            android:textSize="18dp"
            android:fontFamily="@font/c"
            android:layout_gravity="center_horizontal"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>