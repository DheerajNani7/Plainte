<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegisterActivity">
<!--    android:background="@drawable/queensland"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:layout_margin="16dp"
        tools:ignore="UselessParent">
        <TextView
            android:layout_width="match_parent"
            android:text="Plainte"
            android:textAlignment="center"
            android:textSize="70dp"
            android:textColor="@color/gb"
            android:fontFamily="@font/f"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="match_parent"
            android:text="Make Your City Clean!"
            android:textAlignment="center"
            android:textColor="@color/gb"
            android:fontFamily="@font/f"
            android:textSize="40dp"
            android:layout_height="match_parent"/>

        <EditText
            android:id="@+id/fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:ems="10"

            android:textSize="20dp"
            android:hint="@string/full_name"

            android:textColorHint="@color/darkgray"
            android:textColor="@color/black"
            android:inputType="textPersonName"
            android:importantForAutofill="no"
             />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:hint="username"
            android:textSize="20dp"
            android:textColorHint="@color/darkgray"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            android:importantForAutofill="no"
             />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:hint="@string/phone"
            android:textSize="20dp"
            android:textColorHint="@color/darkgray"
            android:textColor="@color/black"
            android:inputType="phone"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Password"
            android:textSize="20dp"
            android:textColorHint="@color/darkgray"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:importantForAutofill="no"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:hint="Confirm Password"
            android:textColorHint="@color/darkgray"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:importantForAutofill="no"
            android:textSize="20dp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/regButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join Now"
            android:textColor="@color/white"
            android:background="@color/black"
            android:onClick="register"
            android:fontFamily="@font/c"
            android:textSize="40dp"
            android:layout_marginBottom="24dp"
            />

        <Button
            android:id="@+id/loginQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already on plainte? sign in"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textAlignment="center"
            android:fontFamily="@font/c"
            android:textSize="23dp"
            android:onClick="registerlogin"
           />
    </LinearLayout>

</RelativeLayout>